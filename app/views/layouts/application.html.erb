<!DOCTYPE html>
<html>
  <head>
    <title>SOD5</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

 <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

  <!-- Custom CSS -->

  <%# <link rel="stylesheet" href="assets/css/style.css"> %>

  <!-- Fonts & Icons -->
  <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;700&family=Lobster&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
    integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

  <title>DGJ</title>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <nav class="comun navbar navbar-dark navbar-expand-lg text-white fixed-top bg-dark">
    <div id="nav-title" class="navbar-brand ml-5">
      <h4 id="h4-1">DGJ</h4>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto mr-5 pr-5">
        
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboards_path, class: "nav-link" %>
        </li>
        
        
        <% if can? :manage, UserAccess %>
        <li class="nav-item">
          <%= link_to "User_Accesses", user_accesses_path, class: "nav-link" %>
        </li>
        <% end %>
       

        <% if can? :manage, Cycle %>
        <li class="nav-item">
        <%= link_to "Cycles", cycles_path, class: "nav-link" %>
        </li>
        <% end %>
        
        <% if can? :manage, Responsibility %>
          <li class="nav-item">
            <%= link_to "Responsibilities", responsibilities_path, class: "nav-link" %>
          </li>
        <% end %>

        <% if can? :manage, Conflict %>
          <li class="nav-item">
            <%= link_to "Conflicts", conflicts_path, class: "nav-link" %>
          </li>
         <% end %>
       

        <% if can? :manage, AdminUser %>      
          <li class="nav-item">
            <%= link_to "Admin_Dashboard", admin_root_path, class: "nav-link" %>
          </li>
         <% end %>
  
        <% if can? :manage, User %>
          <li class="nav-item">
            <%= link_to "Users", users_path, class: "nav-link" %>
          </li>
        <% end %>
  
        <% if can? :manage, Company %>
          <li class="nav-item">
            <%= link_to "Companies", companies_path, class: "nav-link" %>
          </li>
         <% end %>
       
        

          <% if user_signed_in? %>
            <%= link_to "Sign out", destroy_user_session_path, method: :delete  %>
            <%= link_to "Edit profile", edit_user_registration_path  %>
          <% else %>
            <%= link_to "Sign in ", new_user_session_path %>
            <span> or </span>
             <%= link_to "Sign up", new_user_registration_path %>
          <% end %>
        

      </ul>
    </div>
  </nav>

    <% if user_signed_in? %>
      Signed in as <%= current_user.email %>. Not you?
      <%= link_to "Edit profile", edit_user_registration_path %>
      <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Sign up", new_user_registration_path %> or
      <%= link_to "sign in", new_user_session_path %>
    <% end %>

    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <%= yield %>
    
 <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
    integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
    crossorigin="anonymous"></script>

  <!-- Personal JavaScript -->
  <%# <script src="assets/js/script.js"></script> %>


  </body>
</html>
