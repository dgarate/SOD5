<%= form_with(model: conflict, local: true) do |form| %>
  <% if conflict.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(conflict.errors.count, "error") %> prohibited this conflict from being saved:</h2>

      <ul>
        <% conflict.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cycle_id %>
    <%= form.collection_select :cycle_id, ::Cycle.order(:name), :id, :name %>
  </div>
  

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :responsibilities %>
    <%= form.collection_check_boxes(:responsibility_ids, Responsibility.all, :id ,:name) do |b| %>
      <%= b.label class:"label-checkbox" do %>
        <%= b.check_box + b.text%>
        
      <% end %>
    <% end %>
  </div>


  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_select :end_date %>
  </div>

  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
