<p id="notice"><%= notice %></p>

<h1>Conflicts</h1>

<br>
  
<div>
  <h2> Conflict by Cycle </h2>
    <%= bar_chart @conflict_cycle_count %>
    <%= bar_chart("General Ledger": 3, b: 9, c: 4) %>
</div>



<table>
  <thead>
    <tr>
      <th>Cycle</th>
      <th>Name</th>
      <th>Description</th>
      <th>Conflict Users</th>
      <th>Conflict Qty</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conflicts.each do |conflict| %>
      <% conflict_users = conflict.users%>
      <tr>
        <td><%= conflict.cycle.name %></td>
        <td><%= conflict.name %></td>
        <td><%= conflict.description %></td>
        <td><%= conflict_users.pluck(:username) %></td>
        <td><%= conflict_users.count %></td>
        <td><%= conflict.end_date %></td>
        <td><%= link_to 'Show', conflict %></td>
        <td><%= link_to 'Edit', edit_conflict_path(conflict) %></td>
        <td><%= link_to 'Destroy', conflict, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conflict', new_conflict_path %>
